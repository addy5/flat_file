<div class="fullWidthContainer">

  <ul class="posterColumn left">
    <% for i in 0..@user.posts.length - 1 %>
      <% if i % 3 == 0 %>
        <div class="posterModule">
          <img style="width: 100%;" src="<%= @user.posts[i].image.url(:large)%>" alt="poster image" />
          <p class="details">
            Artist: &nbsp; <%= @user.posts[i].artist %> <br>
            Year: &nbsp; <%= @user.posts[i].year %> <br>
            Comments: &nbsp;<span> <%= @user.posts[i].comments %>  </span>
          </p>
        </div>
      <% end %>
    <% end %>
  </ul>

