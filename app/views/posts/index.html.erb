<div class="fullWidthContainer">
  <!-- SEARCH BOX: -->
  <div style="margin-top: 45px;">
    <%= form_tag("/posts/search", method: "get") do %>
      <%= text_field_tag :query,nil, :placeholder => "Name | Artist | Keyword", :style => "height:33px; width: 30%; min-width: 250px; text-align:center; font-size: 17px; margin: 0; padding-right: 28px; border-radius: 5px; border: 1px solid grey;" %>

      <%= image_submit_tag("Search.png", :name => 'filter', :style => "height:34px; vertical-align: top; border: 1px solid grey; margin: 0; position:relative; left: -40px; border-top-right-radius:5px; border-bottom-right-radius:5px; ") %>
    <% end %>
  </div>

  <!-- SHUFFLE AND SHOW RANDOM POSTERS ON INDEX: -->
  <div class="shuffledPosterContainer">
    <h1 class="updateHeader">Around The Web:</h1>

    <% for i in 0..@posts.length - 1 %>
        <div class="indexPosterModule" style="background-image: url('<%= @posts[i].image.url(:large)%>')">
          <p class="indexPostDetails">
            Artist: &nbsp; <%= @posts[i].artist %> <br>
            Year: &nbsp; <%= @posts[i].year %> <br>
            <a href="/users/<%= @posts[i].user.id %>"> >> More from this wall</a>
          </p>
        </div>
    <% end %>

  </div>

</div>

